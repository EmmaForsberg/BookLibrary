@model IEnumerable<BookLibrary.Models.Book>
@{
    <table class="table table-striped">
        <tr>
            <th>
                Id
            </th>

            <th>
                Title
            </th>

            <th>
                Author
            </th>

            <th>
                Description
            </th>
            <th>
                Is Read
            </th>
        </tr>

    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Id</td>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Description</td>
            <td>@(book.IsRead ? "Read" : "Not Read")</td>
        </tr>
    }
    </table>

}
