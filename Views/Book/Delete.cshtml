@using BookLibrary.ViewModel
@model BookLibrary.ViewModel.DeleteBookViewModel

<h1>Bekräfta radering av bok</h1>

<form method="post" asp-action="DeleteConfirmed">
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" class="form-control" readonly value="@Model.Title" />
    </div>
    <div class="form-group">
        <label for="Author">Author</label>
        <input asp-for="Author" class="form-control" readonly value="@Model.Author" />
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description" class="form-control" readonly value="@Model.Description" />
    </div>

    <input type="hidden" name="Id" value="@Model.Id"/>

    <button type="submit" class="btn btn-danger">Bekräfta Radering</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Avbryt</a>
</form>
